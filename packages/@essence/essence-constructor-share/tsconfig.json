{
    "compilerOptions": {
        "outDir": "./lib",
        "declaration": true,
        "noImplicitAny": true,
        "lib": ["dom", "es2019"],
        "target": "es5",
        "skipLibCheck": true,
        "jsx": "react",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "typeRoots": ["src/typings"],
        "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["**/__tests__/**"]
}
